{% extends 'base.html.twig' %}

{% block title %}S'inscrire - {{ parent() }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center flex-column">
        <div class="col-11 col-md-8 col-lg-5 mx-auto qsa-register-form qsa-radius">


            <h1 class="mb-3 text-center mt-2">S'inscrire</h1>
            {{ form_start(registrationForm) }}

            {# Nom #}
            <div class="mb-2">
                {{ form_label(registrationForm.name) }}
                <div class="errors mt-2">
                    {{ form_errors(registrationForm.name) }}
                </div>
                {{ form_widget(registrationForm.name) }}
            </div>
            {# Nom #}

            {# Email #}
            <div class="mb-2">
                {{ form_label(registrationForm.email) }}
                <div class="errors mt-2">
                    {{ form_errors(registrationForm.email) }}
                </div>
                {{ form_widget(registrationForm.email) }}
            </div>
            {# Email #}

            {# Password and confirm password #}
            <div class="mb-2">
                <div class=" mt-1">
                    {{ form_label(registrationForm.plainPassword.first) }}
                    <div class="errors mt-1">
                        {{ form_errors(registrationForm.plainPassword.first) }}
                    </div>
                    {{ form_widget(registrationForm.plainPassword.first) }}
                </div>
            </div>
            <div class="mb-2">
                <div class=" mt-1">
                    {{ form_label(registrationForm.plainPassword.second) }}
                    <div class="errors mt-1">
                        {{ form_errors(registrationForm.plainPassword.second) }}
                    </div>
                    {{ form_widget(registrationForm.plainPassword.second) }}
                </div>
            </div>
            {# Password and confirm password #}

            <p class="mb-0 mt-2">Vous avez déjà un compte ? Connectez vous <a href="{{ path('app_login') }}">ici</a></p>

            <button type="submit" class="btn qsa-btn mt-3">S'inscrire</button>

            {{ form_end(registrationForm) }}
        </div>

    </div>

{% endblock %}
